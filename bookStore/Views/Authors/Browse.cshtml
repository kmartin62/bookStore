@model bookStore.Models.Author

@{
    ViewBag.Title = Model.Name;
}

<h2>Книѓи од авторот: @Model.Name</h2>

<ul>
    @foreach (var book in Model.Books)
    {
        <li>
            <a href="@Url.Action("Details", "Books", new { area = "", id = @book.Id })">@book.Name</a>
        </li>
    }
</ul>