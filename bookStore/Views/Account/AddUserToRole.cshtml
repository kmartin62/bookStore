@model bookStore.Models.AddUserToRoleModel
@{
    /**/

    ViewBag.Title = "Add User To Role";
}

<h2>Add User To Role</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
<div class="form-group">
    @Html.LabelFor(model => model.userEmail, htmlAttributes: new { @class = "control-label" })

    @Html.TextBoxFor(m => m.userEmail, new { @class = "form-control" })
</div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
    </div>
    <input type="submit" value="Save" class="btn" />
}
